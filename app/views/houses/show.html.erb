<h1>閲覧</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @house.price %>
</p>

<p>
  <strong>住所:</strong>
  <%= @house.adress %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @house.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @house.remarks %>
</p>

<% @stations.each do |station| %>
 <% if @house.stations.any? %>
    <p>路線名：<%= station.route %></p>
    <p>駅名：<%= station.name %></p>
    <p>徒歩分数：<%= station.distance %></p>
  <% end %>
 <% end %>

<%= link_to 'Edit', edit_house_path(@house) %> |
